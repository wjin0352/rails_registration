<h3>Login</h3>

<div>
  <% if flash[:status] == FALSE %>
    <p><%= flash[:alert] %></p>
  <%end%>
</div>

<%= form_for(:session, :url => sessions_path) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password%>
    </div>
    <div>
      <%= f.submit "Login" %>
    </div>
<% end %>














